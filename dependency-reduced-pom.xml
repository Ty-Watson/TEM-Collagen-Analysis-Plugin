<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>pom-scijava</artifactId>
    <groupId>org.scijava</groupId>
    <version>31.1.0</version>
    <relativePath>pom.xml</relativePath>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <groupId>edu.lsu.be</groupId>
  <artifactId>tem-collagen-analysis-plugin</artifactId>
  <name>TEM-Collagen-Analysis-Plugin</name>
  <version>0.1.0-SNAPSHOT</version>
  <description>An imageJ plugin to analyze collagen fibrils</description>
  <url>https://tywats.com</url>
  <issueManagement>
    <system>GitHub Issues</system>
    <url>https://github.com/imagej/example-legacy-plugin/issues</url>
  </issueManagement>
  <ciManagement>
    <system>None</system>
  </ciManagement>
  <inceptionYear>2024</inceptionYear>
  <mailingLists>
    <mailingList>
      <name>Image.sc Forum</name>
      <archive>https://forum.image.sc/tag/imagej</archive>
    </mailingList>
  </mailingLists>
  <developers>
    <developer>
      <id>Ty-Watson</id>
      <name>Ty Watson</name>
      <url>https://tywats.com</url>
      <roles>
        <role>founder</role>
        <role>lead</role>
        <role>developer</role>
        <role>debugger</role>
        <role>reviewer</role>
        <role>support</role>
        <role>maintainer</role>
      </roles>
    </developer>
  </developers>
  <contributors>
    <contributor>
      <name>None</name>
    </contributor>
  </contributors>
  <licenses>
    <license>
      <name>CC0</name>
      <url>https://creativecommons.org/publicdomain/zero/1.0/</url>
      <distribution>repo</distribution>
    </license>
  </licenses>
  <scm>
    <connection>scm:git:https://github.com/imagej/example-legacy-plugin</connection>
    <developerConnection>scm:git:git@github.com:imagej/example-legacy-plugin</developerConnection>
    <url>https://github.com/imagej/example-legacy-plugin</url>
  </scm>
  <organization>
    <name>LSU BE</name>
    <url>https://www.lsu.edu/eng/bae/index.php</url>
  </organization>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.5.3</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <artifactSet>
                <includes>
                  <include>de.alsclo:voronoi-java</include>
                  <include>com.github.haifengl:smile-core</include>
                  <include>com.github.haifengl:smile-base</include>
                  <include>org.tinfour:TinfourCore</include>
                </includes>
              </artifactSet>
              <filters>
                <filter>
                  <artifact>com.github.haifengl:smile-core</artifact>
                  <includes>
                    <include>smile/classification/**</include>
                  </includes>
                </filter>
                <filter>
                  <artifact>com.github.haifengl:smile-base</artifact>
                  <includes>
                    <include>smile/neighbor/**</include>
                    <include>smile/math/**</include>
                  </includes>
                </filter>
              </filters>
              <transformers>
                <transformer>
                  <mainClass>CollagenAnalysis.CollagenAnalysisPlugin</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-resources-plugin</artifactId>
        <version>3.2.0</version>
        <executions>
          <execution>
            <id>copy-plugin-to-imagej</id>
            <phase>install</phase>
            <goals>
              <goal>copy-resources</goal>
            </goals>
            <configuration>
              <outputDirectory>${scijava.app.directory}/plugins</outputDirectory>
              <resources>
                <resource>
                  <directory>${project.build.directory}</directory>
                  <includes>
                    <include>${project.build.finalName}.jar</include>
                  </includes>
                </resource>
              </resources>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <repositories>
    <repository>
      <id>scijava.public</id>
      <url>https://maven.scijava.org/content/groups/public</url>
    </repository>
    <repository>
      <id>imagej.public</id>
      <url>https://maven.imagej.net/content/groups/public</url>
    </repository>
  </repositories>
  <dependencies>
    <dependency>
      <groupId>net.imglib2</groupId>
      <artifactId>imglib2-ij</artifactId>
      <version>2.0.0-beta-46</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>net.imagej</groupId>
      <artifactId>imagej</artifactId>
      <version>2.11.0</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>org.apache.commons</groupId>
      <artifactId>commons-math-parent</artifactId>
      <version>4.0-beta1</version>
      <type>pom</type>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>gov.nist.math</groupId>
      <artifactId>jama</artifactId>
      <version>1.0.3</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>org.apache.commons</groupId>
      <artifactId>commons-csv</artifactId>
      <version>1.9.0</version>
      <scope>compile</scope>
    </dependency>
  </dependencies>
  <properties>
    <license.copyrightOwners>My Company, Inc.</license.copyrightOwners>
    <scijava.app.directory>/Applications/Fiji.app</scijava.app.directory>
    <license.licenseName>cc0</license.licenseName>
    <package-name>CollagenAnalysis</package-name>
    <main-class>CollagenAnalysis.CollagenAnalysisPlugin</main-class>
  </properties>
</project>
